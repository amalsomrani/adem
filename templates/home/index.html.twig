{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

  <section>
    <div class="container">

    {% for item in heros %}
      
    
      <div class="row d-flex justify-content-center ">

        <div class="col mt-4">

          <div>
            
           <h2 class="titre"> {{ item.titre }}</h2>

          </div>
          <div>
            <h4 class="sous"> {{ item.soustitre }}</h4>
          </div>
          <div>
            <a href="" class="btn bg-dark text-white">Explorer</a>
          </div>

        </div>

        <div class="col">

          <img src="/heros/{{ item.image }}" class="img-fluid img-heros" alt="image">

        </div>

      </div>
   {% endfor %}
    </div>
  </section>

{% endblock %}
